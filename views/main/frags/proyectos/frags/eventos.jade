.eventos(ng-if="eventos.length > 0")
	.title
		md-icon date_range
		.title-content
			h2 Eventos
			p Participa en algunos de los eventos.
	md-list
		md-progress-linear(md-mode="indeterminate" ng-if="!eventos"  ng-disabled="eventos")
		md-list-item(ng-repeat="evento in eventos")
			.fecha {{evento.fecha | date:'dd-MM-yyyy'}}
			md-card(md-whiteframe="1" ng-click="inscribirseEvento(evento, ev)" ng-init="hover = false"  ng-mouseover="hover = true" ng-mouseleave="hover = false"  ng-class="hover ? 'conHover' : 'sinHover'").md-list-item
				p {{evento.nombre}}
			.md-secondary
				.usuario(layout="row")
					img(ng-src="{{usuario.avatar.fb_avatar}}" ng-repeat="usuario in evento.Usuario")
